#!/usr/bin/nu

let dirs = [articles books]

def main [addr: string] {
    for d in $dirs {
        print $"cloning ($d) to ($addr)"
        rclone sync $d koob:/mnt/onboard/($d) --sftp-host $addr --exclude "*.sdr/**" --exclude ".git/**" --no-update-modtime --no-update-dir-modtime --verbose --update
    }
}
